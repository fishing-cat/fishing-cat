<!DOCTYPE html>
<html>
  <head>
    <title><%= t(".title") %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "admin", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <nav class="navbar navbar-expand-sm navbar-light bg-light fixed-top">
      <div class="container-fluid">
        <%= link_to(t(".title"), admin_root_path, class: "navbar-brand") %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#app-navbar-collapse" aria-controls="app-navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="app-navbar-collapse">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to(
                icon_campaigns(text:t(".campaigns"), fw: true),
                admin_campaigns_path,
                class: ["nav-link", params[:controller] == "admin/campaigns" ? "active": ""],
              ) %>
            </li>
            <li class="nav-item">
              <%= link_to(
                icon_events(text:t(".events"), fw: true),
                admin_events_path,
                class: ["nav-link", params[:controller] == "admin/events" ? "active": ""],
              ) %>
            </li>
            <li class="nav-item">
              <%= link_to(
                icon_people(text:t(".people"), fw: true),
                admin_people_path,
                class: ["nav-link", params[:controller] == "admin/people" ? "active": ""],
              ) %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
